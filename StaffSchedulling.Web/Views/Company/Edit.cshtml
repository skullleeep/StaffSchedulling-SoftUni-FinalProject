@using StaffScheduling.Web.Models.InputModels.Company;
@model CompanyEditInputModel

@{
    ViewData["Title"] = "Edit Company";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 800px; width: 100%;">
        <div class="card-body p-5">
            <h1 class="card-title text-center mb-4 display-5">Edit Company</h1>
            <hr class="mb-5" />
            <form id="createForm" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Company Name -->
                <div class="form-floating mb-4">
                    <input asp-for="Name" class="form-control form-control-lg" autocomplete="company-name" aria-required="true" placeholder="Example Company" />
                    <label asp-for="Name" class="fs-5"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Max Vacation Days -->
                <div class="form-floating mb-4">
                    <input asp-for="MaxVacationDaysPerYear" class="form-control form-control-lg" autocomplete="max-vacation-days-per-year" aria-required="true" placeholder="e.g. 10" />
                    <label asp-for="MaxVacationDaysPerYear" class="fs-5"></label>
                    <span asp-validation-for="MaxVacationDaysPerYear" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-dark btn-lg w-100 py-3">
                    Save Changes
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
