@using StaffScheduling.Web.Models.InputModels.EmployeeInfo;
@model AddEmployeeInfoManuallyInputModel

<form asp-action="AddEmployeeManually" method="post" class="row g-2">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <input asp-for="CompanyId" type="hidden" readonly/>
    <div class="col-md-8">
        <input asp-for="Email" class="form-control" placeholder="Enter employee email" required />
    </div>
    <div class="col-md-4 text-end">
        <button type="submit" class="btn btn-success w-100">Add Employee</button>
    </div>
</form>