@using StaffScheduling.Common
@using StaffScheduling.Common.Enums
@using StaffScheduling.Web.Models.ViewModels.EmployeeInfo
@using StaffScheduling.Web.Models.InputModels.EmployeeInfo;
@using StaffScheduling.Common.Enums.Filters;
@model ManageEmployeesInfoViewModel

@{
    ViewData["Title"] = $"Manage Employees";
}

<partial name="_ConfirmationModal">

<div class="container mt-4">
    <div class="row mb-3">
        <!-- Header Section -->
        <div class="col-md-8">
            <h1 class="h3">Manage Employees</h1>
        </div>
        <!-- Back to Company Button -->
        <div class="col-md-4 text-end">
            <div class="col-md-12 text-end">
                <a asp-controller="Manage" asp-action="Company" asp-route-id="@Model.CompanyId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Company
                </a>
            </div>
        </div>
    </div>

    @if(!String.IsNullOrEmpty(TempData["EmployeeError"] as string))
    {
        <div class="alert alert-danger" role="alert">
            <p>@TempData["EmployeeError"]</p>
        </div>
    }

    <!-- Search Section -->
    <div class="row mb-4">
        <form method="get" asp-action="Employees" asp-route-id="@Model.CompanyId" class="input-group gap-2 flex-row"> @*scrollToTable is detected by javascript*@
            <!-- Hidden Input for scrollToTable -->
            <input type="hidden" name="scrollToTable" value="True" />

            <input type="text" asp-for="SearchQuery" class="form-control w-50" placeholder="Search employees" value="@Model.SearchQuery" />
            <select class="no-border-select w-auto" asp-for="SearchFilter">
            <!-- Populate filters dynamically -->
            @foreach (var filter in Helper.EnumArray<EmployeeSearchFilter>())
            {
                if (Model.SearchFilter.HasValue)
                {
                    if (filter == Model.SearchFilter.Value)
                    {
                            <option value="@(filter)" selected>Search By: @filter.ToString()</option>
                    }
                    else
                    {
                            <option value="@(filter)">Search By: @filter.ToString()</option>
                    }
                }
                else
                {
                        <option value="@(filter)">Search By: @filter.ToString()</option>
                }
            }
            </select>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <!-- Employee Adding Section -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <!-- Add Employee Manually -->
                <div class="col-md-8">
                    <partial name="_AddEmployeeManuallyForm" model="@new AddEmployeeInfoManuallyInputModel() { CompanyId = Model.CompanyId }" />
                </div>

                <!-- OR -->
                <div class="col-md-1 d-flex justify-content-center">
                    <div style="height: 100%; padding-left: 10px; padding-right: 10px; padding-top:10px;">
                        <h3>OR</h3>
                    </div>
                </div>

                <!-- Upload Employees -->
                <div class="col-md-3">
                    <button type="submit" class="btn btn-info w-100">Upload Excel With Employees</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Table -->
        <div id="employeesTable" class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><input type="checkbox" id="selectAll" /></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Has Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Employees != null && Model.Employees.Any())
                        {
                            foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td><input type="checkbox" class="employee-checkbox" value="@employee.Id" /></td>
                                    <td>
                                        @if (!String.IsNullOrEmpty(employee.Name))
                                        {
                                            @employee.Name
                                        }
                                        else
                                        {
                                            <i class="font-weight-light">Empty</i>
                                        }
                                    </td>
                                        <td id="employeeEmail-@employee.Id.ToString()">@employee.Email</td>
                                    <td>
                                        <partial name="_ChangeRoleForm"
                                                 model="@new ChangeRoleInputModel() { CompanyId = Model.CompanyId, 
                                                                                      CurrentUserPermission = Model.CurrentUserPermission,
                                                                                      EmployeeId = employee.Id, 
                                                                                      Role = employee.Role}" />
                                    </td>
                                    <td>
                                        @if (!String.IsNullOrEmpty(employee.Department))
                                        {
                                            @employee.Department
                                        }
                                        else
                                        {
                                            <i class="font-weight-light">None</i>
                                        }
                                    </td>
                                    <td>
                                        @if (employee.HasJoined)
                                        {
                                            <span class="badge bg-success">Joined</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <partial name="_DeleteEmployeeForm" model="@new DeleteEmployeeInputModel() { CompanyId = Model.CompanyId, EmployeeId = employee.Id }" />
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No employees found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bulk Actions Section -->
    <div class="card mb-4 mt-4">
        <div class="card-body">
            <div class="row">
                <!-- Change Department Of Selected -->
                @if (Model.Departments.Any())
                {
                    <div class="col-md-8">
                        <div class="d-flex align-items-center gap-2 h-100">
                            <select name="department" class="form-select w-100 h-100">
                                <!-- Populate departments dynamically -->
                                @foreach (var department in Model.Departments)
                                {
                                    <option value="@department.Id">@department.Name</option>
                                }
                            </select>
                            <button class="btn btn-primary w-100 w-md-auto">Change Department Of Selected</button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-8">
                        <div class="d-flex align-items-center gap-2 h-100">
                            <select disabled="disabled" class="form-select w-100 h-100">
                                <option>No Departments Found</option>
                            </select>
                            <button disabled="disabled" class="btn btn-primary w-100 w-md-auto">Change Department Of Selected</button>
                        </div>
                    </div>
                }

                <!-- OR -->
                <div class="col-md-1 d-flex justify-content-center">
                    <div style="height: 100%; padding-left: 10px; padding-right: 10px; padding-top:10px;">
                        <h3>OR</h3>
                    </div>
                </div>

                <!-- Delete Selected -->
                <div class="col-md-3">
                    <button id="deleteSelectedBtn" class="btn btn-danger w-100">Delete Selected</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Pagination Section -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Manage" asp-action="Employees" 
                            asp-route-id="@Model.CompanyId" 
                            asp-route-searchQuery="@Model.SearchQuery" 
                            asp-route-searchFilter="@Model.SearchFilter.ToString()" 
                            asp-route-currentPage="@i">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/manage-employees.js"></script>
    <script src="~/js/confirmation-modal.js"></script>
    <script>
        function confirmDelete(employeeId) {
            let employeeEmail = document.getElementById(`employeeEmail-${employeeId}`).innerHTML;

            // Show the confirmation modal
            showConfirmationModal(
                    `Are you sure you want to delete employee with email ${employeeEmail}?`,
                    () => document.getElementById(`deleteForm-${employeeId}`).submit(), // Resubmit the form upon confirmation
                "btn-danger",
                "Delete"
            );
        }
    </script>
}

