@using StaffScheduling.Web.Models.InputModels.Vacation;
@using StaffScheduling.Common.Constants

@model AddVacationOfEmployeeInputModel


<form asp-controller="Vacation" asp-action="AddVacationOfEmployee" method="post">
    <input asp-for="CompanyId" type="hidden" readonly />
    <input asp-for="EmployeeId" type="hidden" readonly />

    <div class="row g-3 align-items-end">
        <div class="col-md-5">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control custom-date-picker" required />
        </div>

        <div class="col-md-5">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control custom-date-picker" required />
        </div>

        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-success w-auto">Add Vacation</button>
        </div>
    </div>
</form>