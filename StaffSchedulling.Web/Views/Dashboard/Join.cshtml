@using StaffScheduling.Web.Models.ViewModels.Company;
@model CompanyViewModel

@{
    ViewData["Title"] = "Join Company";
}

<h1>Join Company</h1>

<!-- Display company name -->
<p>You are about to join the company: <span style="font-size: 1.25rem; font-weight: 500;">@Model.Name</span></p>

<!-- Display error message if there are any -->
<div asp-validation-summary="All" class="text-danger"></div>

<!-- Form for joining the company -->
<form asp-action="Join" method="post">
    <!-- Hidden fields -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />

    <!-- Join button -->
    <button type="submit" class="btn btn-primary">Join Company</button>
</form>