@using static StaffScheduling.Common.DataConstants.Web;
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1>Staff Scheduling Made Simple</h1>
        <p>Your go-to solution for easy staff management and scheduling for businesses of all sizes.</p>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container text-center">
        <h2>Are You a Company Owner?</h2>
        <p>Sign up and manage your staff schedules with ease. Reduce administrative burden and focus on growing your business.</p>
        <a asp-area="Identity" asp-page="/Account/RegisterCompany" class="btn btn-primary btn-lg">Register as a Company Owner</a>
    </div>
</section>

<section class="cta-section bg-light">
    <div class="container text-center">
        <h2>Are You an Employee?</h2>
        <p>Register and request schedule changes directly from home. Stay organized and up-to-date with your shifts.</p>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary btn-lg">Register as an Employee</a>
    </div>
</section>
